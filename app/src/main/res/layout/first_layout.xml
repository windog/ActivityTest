<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">


    <Button
        android:id="@+id/button_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#E91E63"
        android:text="button 1" />

    <Button
        android:id="@+id/to_activity2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:text="To_second_activity" />

    <Button
        android:id="@+id/to_activity3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#CDDC39"
        android:text="隐式跳转到ThirdActivity" />

    <Button
        android:id="@+id/to_browser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF5722"
        android:text="打开可以响应HTTP的activity" />

    <Button
        android:id="@+id/to_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#9E9E9E"
        android:text="自定义Action" />

    <Button
        android:id="@+id/to_dial"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8BC34A"
        android:text="dial 10086" />

    <Button
        android:id="@+id/to2activity_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00BCD4"
        android:text="启动activity2并期待返回值" />

    <Button
        android:id="@+id/to_listviewActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:text="to listview"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/to_activity5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:text="Msg界面" />

    <Button
        android:id="@+id/toActivity6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=" To IO Activity"
        android:textAllCaps="true" />


</LinearLayout>